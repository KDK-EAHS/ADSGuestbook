@model ADSGuestbook.Models.HomeViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <h1 class="display-4 text-success">Guestbook</h1>

        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Title:</label>
                <input asp-for="Comment.Title" type="text" class="form-control" placeholder="Interesting title..."/>
                <span asp-validation-for="Comment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Body:</label>
                <textarea asp-for="Comment.Body" class="form-control" placeholder="Write a comment..." rows="3"></textarea>
                <span asp-validation-for="Comment.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Name:</label>
                <input asp-for="Comment.Name" type="text" class="form-control" placeholder="The name you want displayed..."/>
                <span asp-validation-for="Comment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email:</label>
                <input asp-for="Comment.Email" type="text" class="form-control" placeholder="Your email..."/>
                <span asp-validation-for="Comment.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn btn-info pull-right" />
            </div>
        </form>

    @foreach(var comment in Model.Comments)
    {
        <div class="container bootstrap snippets bootdey">
            <div class="row">
		        <div class="col-md-12">
		            <div class="blog-comment">
				        <ul class="comments">
				            <li class="clearfix">
				              <img src="https://bootdey.com/img/Content/user_2.jpg" class="avatar" alt="">
				              <div class="post-comments">
                                  <strong class="text-success">@comment.Title</strong>
				                  <p class="meta">@comment.CreatedDate <a href="#">@comment.Name</a> says: <i class="pull-right"><a href="#"><small>Reply</small></a></i></p>
				                  <p>
				                      @comment.Body
				                  </p>
				              </div>
				            </li>
				        </ul>
			        </div>
		        </div>
	        </div>
        </div>
    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
